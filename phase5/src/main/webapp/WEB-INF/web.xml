<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>Filter</filter-name>
        <filter-class>controller.Filter</filter-class>
    </filter>

    <servlet>
        <servlet-name>chargeCtrl</servlet-name>
        <servlet-class>controller.chargeCtrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginCtrl</servlet-name>
        <servlet-class>controller.loginCtrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>recordCtrl</servlet-name>
        <servlet-class>controller.recordCtrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchCtrl</servlet-name>
        <servlet-class>controller.searchCtrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>moreInfoCtrl</servlet-name>
        <servlet-class>controller.moreInfoCtrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>payCtrl</servlet-name>
        <servlet-class>controller.payCtrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>authenCtrl</servlet-name>
        <servlet-class>controller.authenCtrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>houses</servlet-name>
        <servlet-class>controller.houses</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>chargeCtrl</servlet-name>
        <url-pattern>/ccharge</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginCtrl</servlet-name>
        <url-pattern>/clogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>recordCtrl</servlet-name>
        <url-pattern>/crecord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchCtrl</servlet-name>
        <url-pattern>/csearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>moreInfoCtrl</servlet-name>
        <url-pattern>/cmoreInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>payCtrl</servlet-name>
        <url-pattern>/cpay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>authenCtrl</servlet-name>
        <url-pattern>/cauthen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>houses</servlet-name>
        <url-pattern>/houses</url-pattern>
    </servlet-mapping>


    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/ccharge</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/clogin</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/cmoreInfo</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/crecord</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/cpay</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Filter</filter-name>
        <url-pattern>/houses</url-pattern>
    </filter-mapping>
</web-app>